node {
    def gradleImage = docker.image('gradle:7.6-jdk8')
    gradleImage.pull()

    stage('Checkout') {
        git branch: 'main', url: 'https://github.com/macloujulian/gs-gradle.git'
    }

    stage('Build') {
        gradleImage.inside('-v $HOME/.gradle:/home/gradle/.gradle') {
            sh '''
              cd complete
              gradle clean build
            '''
        }
    }

    stage('SonarQube Analysis') {
        withSonarQubeEnv('SonarQube') {
            gradleImage.inside('-v $HOME/.gradle:/home/gradle/.gradle') {
                sh '''
                  cd complete
                  gradle sonar \
                    -Dsonar.projectKey=GS \
                    -Dsonar.projectName=gs-gradle \
                    -Dsonar.projectVersion=${BUILD_NUMBER}
                '''
            }
        }
    }
}
